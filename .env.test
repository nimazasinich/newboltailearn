# Persian Legal AI - Test Environment Configuration
# Test Environment Variables

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only-minimum-32-characters-long

# HuggingFace Integration
HF_TOKEN_B64=test_huggingface_token_for_testing

# Database Configuration
DATABASE_URL=./test-persian-legal-ai.db

# Server Configuration
PORT=3001
NODE_ENV=test

# Security Configuration
SESSION_SECRET=test-session-secret-for-testing-only

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./test-uploads

# Training Configuration
MAX_CONCURRENT_TRAINING=1
TRAINING_TIMEOUT_MS=300000

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9091