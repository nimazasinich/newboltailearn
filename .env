# Default Environment Configuration
# This file contains default values for all environments

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_PATH=./persian_legal_ai.db

# Directory Paths
DATASET_DIRECTORY=./datasets
MODEL_DIRECTORY=./models
CHECKPOINT_DIRECTORY=./checkpoints
EXPORT_DIRECTORY=./exports
LOGS_DIRECTORY=./logs

# Frontend Configuration
SERVE_FRONTEND=false
VITE_BASE_PATH=/

# Security Configuration (Generate new secrets for production!)
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production
CSRF_SECRET=your-csrf-secret-key-change-in-production

# HuggingFace Configuration (Optional)
ENABLE_HF_STARTUP_CHECK=false
HF_TOKEN_B64=
HF_TOKEN_ENC=

# Performance Configuration
TF_CPP_MIN_LOG_LEVEL=2

# Render Configuration (for production deployment)
RENDER_SERVICE_NAME=
RENDER_EXTERNAL_URL=