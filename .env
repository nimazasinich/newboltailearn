# NewBolt AI Learn - Default Environment Variables
# Copy this file to .env.development or .env.production and customize

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=default-jwt-secret-change-in-production
SESSION_SECRET=default-session-secret-change-in-production
CSRF_SECRET=default-csrf-secret-change-in-production

# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
SERVE_FRONTEND=true

# Database Configuration
DB_PATH=./data/persian_legal_ai.db

# Directory Paths
DATASET_DIRECTORY=./datasets
MODEL_DIRECTORY=./models
CHECKPOINT_DIRECTORY=./checkpoints
EXPORT_DIRECTORY=./exports
LOGS_DIRECTORY=./logs

# HuggingFace Configuration (Optional)
# HF_TOKEN_B64=your-base64-encoded-token
# HF_TOKEN_ENC=your-encrypted-token
ENABLE_HF_STARTUP_CHECK=false

# TensorFlow Settings
TF_CPP_MIN_LOG_LEVEL=2

# Redis Configuration (if using cache profile)
REDIS_URL=redis://redis:6379

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *

# Development Settings
DEBUG=false