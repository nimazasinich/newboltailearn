# Persian Legal AI - Environment Configuration
# Copy this file to .env and configure your settings

# HuggingFace API Token (Base64 encoded)
# To encode your token: echo -n "hf_your_token_here" | base64
# Example: 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 -> aGZfWk5MekFqY2FHYkJQQldFUlBhVHhpbklVZlFhWUFwd2JlZA==
HF_TOKEN_ENC=

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./persian_legal_ai.db

# Training Configuration
MAX_CONCURRENT_TRAINING=2
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=0.001

# File Storage
DATASET_DIRECTORY=./datasets
MODEL_DIRECTORY=./models
EXPORT_DIRECTORY=./exports
CHECKPOINT_DIRECTORY=./checkpoints

# Optional: Logging Level
LOG_LEVEL=info

# Optional: CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100