# Persian Legal AI Production Environment Configuration

# Database Configuration
DB_PATH=./database.sqlite
NODE_ENV=production

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-key-change-this-in-production-minimum-32-characters

# Server Configuration
PORT=3001
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=30
RATE_LIMIT_TRAINING=10
RATE_LIMIT_DOWNLOAD=20

# Features
USE_FAKE_DATA=false
DEMO_MODE=false
USE_WORKERS=true
SKIP_CSRF=false

# Monitoring
ENABLE_METRICS=true
ENABLE_LOG_SHIPPING=false

# HuggingFace Configuration (optional)
# HF_TOKEN_B64=your-base64-encoded-huggingface-token-here