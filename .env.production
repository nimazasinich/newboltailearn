# NewBolt AI Learn - Production Environment
# Production-specific configuration

# Security (CHANGE THESE IN PRODUCTION!)
# Generate strong, unique secrets for production use
JWT_SECRET=your-secure-jwt-secret-key-change-this
SESSION_SECRET=your-secure-session-secret-key-change-this
CSRF_SECRET=your-secure-csrf-secret-key-change-this

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
SERVE_FRONTEND=false

# Database Configuration
DB_PATH=/app/data/persian_legal_ai.db

# Directory Paths
DATASET_DIRECTORY=/app/datasets
MODEL_DIRECTORY=/app/models
CHECKPOINT_DIRECTORY=/app/checkpoints
EXPORT_DIRECTORY=/app/exports
LOGS_DIRECTORY=/app/logs

# HuggingFace Configuration (Optional)
# Uncomment and set your actual tokens
# HF_TOKEN_B64=your-base64-encoded-huggingface-token
# HF_TOKEN_ENC=your-encrypted-huggingface-token
ENABLE_HF_STARTUP_CHECK=false

# TensorFlow Settings
TF_CPP_MIN_LOG_LEVEL=2

# Redis Configuration
REDIS_URL=redis://redis:6379

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *

# Production Settings
DEBUG=false

# SSL Configuration (if using)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100