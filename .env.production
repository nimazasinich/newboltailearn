# Persian Legal AI - Production Configuration

# Server Configuration
NODE_ENV=production
PORT=8000
SERVER_PORT=8000
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=/app/data/database.sqlite
DB_PATH=/app/data/database.sqlite

# Security Configuration
JWT_SECRET=your-production-jwt-secret-change-this
SESSION_SECRET=your-production-session-secret-change-this
CSRF_SECRET=your-production-csrf-secret-change-this

# Features Configuration
SERVE_FRONTEND=false
ENABLE_HF_STARTUP_CHECK=false
ENABLE_METRICS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Logging Configuration
TF_CPP_MIN_LOG_LEVEL=2
DEBUG=false

# HuggingFace Configuration (Optional)
# HUGGINGFACE_TOKEN=your-hf-token-here

# Render Configuration (for deployment)
# RENDER_EXTERNAL_URL=https://your-app.onrender.com