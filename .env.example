# Server Configuration
NODE_ENV=development
PORT=3001

# Security (REQUIRED - Generate secure random strings)
JWT_SECRET=your-secure-jwt-secret-min-32-chars-long-replace-this
SESSION_SECRET=your-secure-session-secret-min-32-chars-long-replace-this

# Rate Limiting (requests per window)
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=30
RATE_LIMIT_TRAINING=10
RATE_LIMIT_DOWNLOAD=20

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database
DATABASE_PATH=./persian_legal_ai.db

# Hugging Face Token (base64 encoded)
# To encode: echo -n "your-hf-token" | base64
HF_TOKEN_B64=

# Feature Flags
USE_FAKE_DATA=false
DEMO_MODE=false
USE_WORKERS=false
SKIP_CSRF=false

# Dev Identification (non-production only)
# Only set these in development environments
DEV_ADMIN_USER=admin
DEV_ADMIN_PASS=admin

# Monitoring
ENABLE_METRICS=true
ENABLE_LOG_SHIPPING=false
LOG_SHIPPING_URL=